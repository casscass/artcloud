
<div class="container-fluid myfont">
    <div class="col">
      <div class="row">
        <div class="col-12">
          <p id="notice"><%= notice %></p>
    
          <div class="main-heading">
            <h1>Art Cloud</h1>
          </div>

          <div class= 'col-12'>
            <h1>Sydney Artists</h1>
          </div>

          <table>
          <thead>
              <tr>
                <th>Image</th>
                <th>Artist</th>
                <th><!--Catagory--></th>
                <th><!--Title--></th>
                <th><!--Medium--></th>
                <th><!--Description--></th>
                <th><!--Price--></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @artworks.each do |artwork| %>
                <tr>
                  <td><%= artwork.image %></td>
                  <td><%= artwork.artist %></td>
                  <td><%= artwork.catagory %></td>
                  <td><%= artwork.title %></td>
                  <td><%= artwork.medium %></td>
                  <td><%= artwork.description %></td>
                  <td><%= artwork.price %></td>
                  <td><%= link_to 'Show', artwork %></td> 

                </tr>
              <% end %>

            
            </tbody>
          </table>

          <br>

          <%= link_to 'New Artwork', new_artwork_path %>
        </div>
      </div>
    
    </div> 
</div>    

